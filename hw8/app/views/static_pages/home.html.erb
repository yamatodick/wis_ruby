<% provide(:title, "Home") %>
<center>

<div class="content">
		<% if logged_in? %>
			<div class="row">
				<div class="col-md-3">
					<section class="user_info">
						<%= render 'shared/user_info' %>
					</section>
					<section class="micropost_form">
						<%= render 'shared/micropost_form' %>
					</section>
				</div>
				<div class="col-lg-9">
					<%= render 'shared/feed' %>
				</div>
			</div>
		<% else %>
			<h1>Sample App</h1>
		<p>
			This is the home page for the
			<a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
			sample application.
		</p>
			<%= link_to "<button>Sign Up</button>".html_safe, signup_path, :id => "button_id", :class => "button_class" %>
		<% end %>
</div>	
</center>	
